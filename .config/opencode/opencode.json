{
  "$schema": "https://opencode.ai/config.json",
  "tui": {
    "scroll_speed": 3,
    "scroll_acceleration": {
      "enabled": true
    }
  },
  "tools": {
    "bash": true,
    "write": true,
    "edit": true,
    "read": true,
    "grep": true,
    "glob": true,
    "list": true,
    "patch": true,
    "todowrite": true,
    "todoread": true,
    "webfetch": true
  },
  "mcp": {
    "mysql": {
      "type": "local",
      "enabled": false,
      "command": [
          "npx",
          "-y",
          "@berthojoris/mcp-mysql-server",
          "mysql://klicktipp:klicktipp@127.0.0.1:33066/klicktipp",
          "list,read"
      ]
    },
    "chrome-devtools": {
      "type": "local",
      "enabled": false,
      "command": ["npx", "-y", "chrome-devtools-mcp@latest"]
    },
    "playwright": {
      "type": "local",
      "enabled": false,
      "command": ["npx", "-y", "@playwright/mcp"]
    },
    "unity-mcp": {
      "type": "local",
      "enabled": false,
      "command": [
        "uv",
        "run",
        "--directory",
        "E:\\work\\unity\\playground\\Library\\PackageCache\\com.coplaydev.unity-mcp@83e2b863acf5\\UnityMcpServer~\\src",
        "server.py"
      ]
    },
    "coplay-mcp": {
      "type": "local",
      "enabled": false,
      "command": [
        "uvx",
        "--python",
        ">=3.11",
        "coplay-mcp-server@latest"
      ],
      "timeout": 720000
    }
  }
}
